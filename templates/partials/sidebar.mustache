<amp-sidebar id="sidebar" layout="nodisplay">
  <div class="banner">
    <a on="tap:sidebar.close">
      <amp-img class="close" src="images/close_left_white.svg" width="auto" height="24px" layout="fixed-height" alt="close sidebar"></amp-img>
    </a>
    <a href="index.html">
      <amp-img class="logo" src="images/logo_white.svg" width="160px" height="48px" alt="SMU Libraries"></amp-img>
    </a>
  </div>
  <amp-accordion>
    {{# libraries }}
      <section expanded>
        <h4>
          <div class="show-more category">{{ name }}</div>
          <div class="show-less category expanded">{{ name }}</div>
        </h4>
        <div>
          {{# links }}
            <div class="item">
              <a class="{{ class }}" href="{{ href }}">
                {{ text }}&nbsp;
                {{# level_1 }}➊{{/ level_1 }}
                {{# level_2 }}➋{{/ level_2 }}
                {{# level_3 }}➌{{/ level_3 }}
                {{# level_4 }}➍{{/ level_4 }}
                {{# level_5 }}➎{{/ level_5 }}
              </a>
            </div>
          {{/ links }}
        </div>
      </section>
    {{/ libraries }}
  </amp-accordion>
  <section class="footer">
    <div class="item">
      <a href="{{ feedback }}"><span class="icon">✎</span>Send feedback</a>
    </div>
    <div class="item">
      <a href="{{ about }}"><span class="icon">ⓘ</span>About SMU Libraries</a>
    </div>
    <div class="item">
      <a class="about" href="about.html">
        <span class="icon">
          <amp-img class="smoo_smoo" src="images/smoo_smoo_white.svg" width="14px" height="14px"></amp-img>
        </span>
        About Spaces
      </a>
    </div>
    <div class="spacer"></div>
  </section>
</amp-sidebar>
